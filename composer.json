{
    "name": "tylersriver/yocto",
    "type": "framework",
    "description": "Dependency-less, Simple PHP Framework",
    "license": "MIT",
    "authors": [
      {
        "name": "Tyler Sriver",
        "email": "tyler.sriver@gmail.com"
      }
    ],
    "scripts": {
      "test": [
        "composer dump-autoload -o",
        "@sniff",
        "@lint",
        "@phpstan",
        "@md",
        "@phpunit"
      ],
      "phpunit": "phpunit",
      "phpstan": "phpstan analyse src --memory-limit=-1",
      "lint": "parallel-lint src/",
      "sniff": "php vendor/squizlabs/php_codesniffer/bin/phpcs -s --colors src/",
      "fix": "php vendor/squizlabs/php_codesniffer/bin/phpcbf src/",
      "md": "php vendor/phpmd/phpmd/src/bin/phpmd src/ ansi mdruleset.xml"
    },
    "require": {
        "php": "^8"
    },
    "config": {
      "sort-packages": true
    },
    "autoload": {
      "psr-4": {
        "Yocto\\": "src/"
      },
      "files": [
        "src/functions.php"
      ]
    },
    "autoload-dev": {
      "psr-4": {
        "Yocto\\Tests\\": "tests"
      }
    },
    "require-dev": {
        "jakub-onderka/php-console-highlighter": "^0.4.0",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpmd/phpmd": "^2.8",
        "phpstan/phpstan": "^0.12.5",
        "squizlabs/php_codesniffer": "^3.5"
    }
  }
